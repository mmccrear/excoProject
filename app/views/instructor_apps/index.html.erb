<p id="notice"><%= notice %></p>

<h1>Listing Instructor Apps</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Year</th>
      <th>Semester</th>
      <th>Tnumber</th>
      <th>Status</th>
      <th>Qualifications</th>
      <th>Teaching exp</th>
      <th>Problems</th>
      <th>Excos taken</th>
      <th>Exco problems</th>
      <th>Safe space</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instructor_apps.each do |instructor_app| %>
      <tr>
        <td><%= instructor_app.course %></td>
        <td><%= instructor_app.year %></td>
        <td><%= instructor_app.semester %></td>
        <td><%= instructor_app.tnumber %></td>
        <td><%= instructor_app.status %></td>
        <td><%= instructor_app.qualifications %></td>
        <td><%= instructor_app.teaching_exp %></td>
        <td><%= instructor_app.problems %></td>
        <td><%= instructor_app.excos_taken %></td>
        <td><%= instructor_app.exco_problems %></td>
        <td><%= instructor_app.safe_space %></td>
        <td><%= link_to 'Show', instructor_app %></td>
        <td><%= link_to 'Edit', edit_instructor_app_path(instructor_app) %></td>
        <td><%= link_to 'Destroy', instructor_app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

