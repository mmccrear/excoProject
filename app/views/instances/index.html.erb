<h1>All Applications</h1>

<table class="table">
  <thead>
    <tr>
      <th>Course Number</th>
      <th>Course Title</th>
      <th>Year</th>
      <th>Semester</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instances.each do |instance| %>
      <tr>
        <td><%= c.coursenum.blank? ? "XXX" : c.coursenum %></td>
        <td><%= c.title.blank? ? "UNKNOWN TITLE" : c.title %></td>
        <td><%= instance.year %></td>
        <td><%= instance.semester %></td>
        <td><%= instance.section %></td>
        <td><%= link_to 'Show', instance %></td>
        <td><%= link_to 'Delete', instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

