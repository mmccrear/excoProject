<h1>Listing Instances</h1>

<table class="table">
  <thead>
    <tr>
      <th>Course Number</th>
      <th>Course Title</th>
      <th>Year</th>
      <th>Semester</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @instances.each do |instance| %>
      <tr>
        <%= c = Course.find(instance.inst_course_id) %>
        <td><%= c.coursenum %></td>
        <td><%= c.title %></td>
        <td><%= instance.year %></td>
        <td><%= instance.semester %></td>
        <td><%= instance.section %></td>
        <td><%= link_to 'Show', instance %></td>
        <td><%= link_to 'Edit', edit_instance_path(instance) %></td>
        <td><%= link_to 'Destroy', instance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Instance', new_instance_path %>
